<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    android:background="@drawable/background4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/recent_lesson_1"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="wrap_content"
                android:text="@string/invisible"
                android:visibility="invisible"
                android:backgroundTint="@color/colorLightBrown"/>

            <ImageButton
                android:id="@+id/remove_recent_lesson_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:contentDescription="@string/remove_recent_lesson_1"
                app:srcCompat="@android:drawable/ic_delete"
                android:visibility="invisible"
                android:backgroundTint="@color/colorLightBrown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/recent_lesson_2"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="wrap_content"
                android:text="@string/invisible"
                android:visibility="invisible"
                android:backgroundTint="@color/colorLightBrown"/>

            <ImageButton
                android:id="@+id/remove_recent_lesson_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:contentDescription="@string/remove_recent_lesson_2"
                app:srcCompat="@android:drawable/ic_delete"
                android:visibility="invisible"
                android:backgroundTint="@color/colorLightBrown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

        <Button
            android:id="@+id/recent_lesson_3"
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="wrap_content"
            android:text="@string/invisible"
            android:visibility="invisible"
            android:backgroundTint="@color/colorLightBrown"/>

        <ImageButton
            android:id="@+id/remove_recent_lesson_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:contentDescription="@string/remove_recent_lesson_3"
            app:srcCompat="@android:drawable/ic_delete"
            android:visibility="invisible"
            android:backgroundTint="@color/colorLightBrown"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/start_new_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:text="@string/start_new_lesson"
        android:backgroundTint="@color/colorLightBrown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <Button
            android:id="@+id/dictionary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dictionary"
            android:backgroundTint="@color/colorLightBrown" />

        <Button
            android:id="@+id/achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/achievements"
            android:backgroundTint="@color/colorLightBrown" />

        <Button
            android:id="@+id/finished_lessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finished_lessons"
            android:backgroundTint="@color/colorLightBrown" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:backgroundTint="@color/colorLightBrown" />

    </LinearLayout>

</LinearLayout>